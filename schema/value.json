{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Value Schema",
  "description": "JSON schema for a scientific value",
  "type": "object",

  "definitions": {
    "numericvalue_def": {
      "type": "object",
      "properties": {
        "@id":    { "type": "string" },
        "datatype":   { "type": "string" },
        "number":   { "type": "number" },
        "error": { "type": "number" },
        "errortype": { "type": "string" },
        "sigfigs":  { "type": "integer" },
        "unit": { "type": "string" },
        "unit#": { "type": "string" }
      }
    },
    "numericvaluearray_def": {
      "type": "object",
      "properties": {
        "@id":    { "type": "string" },
        "datatype":   { "type": "string" },
        "numberarray":   { 
          "type": "array",
          "items": {
            "type": "number"
          } 
        },
        "error": { "type": "number" },
        "errorarray":   { 
          "type": "array",
          "items": {
            "type": "number"
          } 
        },
        "errortype": { "type": "string" },
        "sigfigs":  { "type": "integer" }
      },
      "additionalProperties": true   
    },
    "textstring_def": {
      "type": "object",
      "properties": {
        "@id":    { "type": "string" },
        "text":   { "type": "string" },
        "texttype": { "type": "string" },
        "language":  { "type": "string" }
      }
    },
    "textstringarray_def": {
      "type": "object",
      "properties": {
        "@id":    { "type": "string" },
        "textarray":   { 
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "texttype": { "type": "string" },
        "language":  { "type": "string" }
      }
    }
  },

  "properties": {
    "@context": {
      "type": "array",
      "items": { 
        "anyOf" : [ 
          {
            "type": "string"
            }, 
            {
              "type": "object",
              "additionalProperties": true
            } 
          ]
      },
      "default": [
        "https://stuchalk.github.io/scidata/contexts/scidata_value.jsonld",
        "https://stuchalk.github.io/scidata/contexts/scidata_unit.jsonld",
        {"qudt": "https://qudt.org/vocab/unit/"},
        {"@base": "https://stuchalk.github.io/scidata/examples/value.jsonld#"}
      ]
    },
    "@id": { 
      "type": "string",
      "default": ""
     },
     "numericvalue": { "$ref": "#/definitions/numericvalue_def" },
     "numericvaluearray": { "$ref": "#/definitions/numericvaluearray_def" },
     "textstring": { "$ref": "#/definitions/textstring_def" },
     "textstringarray": { "$ref": "#/definitions/textstringarray_def" },
     "value": { "$ref": "#/definitions/numericvalue_def" },
     "valuearray": { "$ref": "#/definitions/numericvaluearray_def" }
  }
}
