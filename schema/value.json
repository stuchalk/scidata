{
  "$id": "scidata.value.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Value Schema",
  "description": "JSON schema for a scientific value",
  "type": "object",

  "definitions": {
    "numericvalue": {
      "type": "object",
      "properties": {
        "@id":    { "type": "string" },
        "datatype":   { "type": "string" },
        "number":   { "type": "number" },
        "error": { "type": "number" },
        "errortype": { "type": "string" },
        "sigfigs":  { "type": "integer" },
        "unit": { "type": "string" },
        "unitstr": { "type": "string" },
        "unitref": { "type": "string" }
      }
    },
    "numericvaluearray": {
      "type": "object",
      "properties": {
        "@id":    { "type": "string" },
        "datatype":   { "type": "string" },
        "numberarray":   { 
          "type": "array",
          "items": {
            "type": "number"
          } 
        },
        "error": { "type": "number" },
        "errorarray":   { 
          "type": "array",
          "items": {
            "type": "number"
          } 
        },
        "errortype": { "type": "string" },
        "sigfigs":  { "type": "integer" }
      },
      "additionalProperties": true   
    },
    "textstring": {
      "type": "object",
      "properties": {
        "@id":    { "type": "string" },
        "text":   { "type": "string" },
        "texttype": { "type": "string" },
        "language":  { "type": "string" }
      }
    },
    "textstringarray": {
      "type": "object",
      "properties": {
        "@id":    { "type": "string" },
        "textarray":   { 
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "texttype": { "type": "string" },
        "language":  { "type": "string" }
      }
    }
  },

  "properties": {
    "@context": {
      "$ref": "scidata.context.json#/definitions/context",
      "default": [
        "http://stuchalk.github.io/scidata/contexts/scidata_value.jsonld",
        "http://stuchalk.github.io/scidata/contexts/scidata_unit.jsonld",
        {"qudt": "http://www.qudt.org/qudt/owl/1.0.0/unit.owl#"},
        {"@base": "http://stuchalk.github.io/scidata/examples/value.jsonld#"}
      ]
    },
    "@id":               { "type": "string", "default": "" },
    "numericvalue":      { "$ref": "#/definitions/numericvalue" },
    "numericvaluearray": { "$ref": "#/definitions/numericvaluearray" },
    "textstring":        { "$ref": "#/definitions/textstring" },
    "textstringarray":   { "$ref": "#/definitions/textstringarray" },
    "value":             { "$ref": "#/definitions/numericvalue" },
    "valuearray":        { "$ref": "#/definitions/numericvaluearray" },
    "unit":              { "$ref": "scidata.unit.json#/definitions/unit" }
  },
  "additionalProperties": false
}
